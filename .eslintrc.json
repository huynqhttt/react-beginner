{
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-unused-styles": 2,
    "split-platform-components": 2,
    "no-inline-styles": 2,
    "comma-spacing": 2,
    "comma-dangle": 2,
    "semi": 2,
    "quotes": 2,
    "jsx-quotes": 2,
    "jsx-curly-spacing": 2
  }
}
